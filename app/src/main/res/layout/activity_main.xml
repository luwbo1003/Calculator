<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvres"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/tvres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_layout"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="64dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation = "vertical"
        android:layout_alignParentBottom="true"
        android:background="#EAE9E9"
        android:paddingVertical="14dp"
        android:id="@+id/button_layout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnC"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="12dp"
            android:text="C"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:backgroundTint="#A1A1A1"
            app:cornerRadius="36dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:backgroundTint="#A1A1A1"
            android:layout_margin="12dp"
            android:id="@+id/btnOp"
            android:text="("/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:backgroundTint="#A1A1A1"
            android:layout_margin="12dp"
            android:id="@+id/btnClo"
            android:text=")"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="30dp"
            android:textColor="#FF9800"
            android:layout_margin="10dp"
            android:id="@+id/btnDivide"
            android:backgroundTint="@color/white"
            android:text="/"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_margin="12dp"
            android:id="@+id/btn7"
            android:text="7"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_margin="12dp"
            android:id="@+id/btn8"
            android:text="8"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_margin="12dp"
            android:id="@+id/btn9"
            android:text="9"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="30dp"
            android:textColor="#FF9800"
            android:layout_margin="12dp"
            android:id="@+id/btnMultiply"
            android:backgroundTint="@color/white"
            android:text="x"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_margin="12dp"
            android:id="@+id/btn4"
            android:text="4"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_margin="12dp"
            android:id="@+id/btn5"
            android:text="5"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_margin="12dp"
            android:id="@+id/btn6"
            android:text="6"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="40dp"
            android:textColor="#FF9800"
            android:backgroundTint="@color/white"
            android:layout_margin="12dp"
            android:id="@+id/btnMinus"
            android:text="-"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_margin="12dp"
            android:id="@+id/btn1"
            android:text="1"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_margin="12dp"
            android:id="@+id/btn2"
            android:text="2"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_margin="12dp"
            android:id="@+id/btn3"
            android:text="3"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="30dp"
            android:textColor="#FF9800"
            android:backgroundTint="@color/white"
            android:layout_margin="12dp"
            android:id="@+id/btnPlus"

            android:text="+"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="19dp"
            android:textColor="@color/black"
            android:layout_margin="12dp"
            android:id="@+id/btnAC"
            android:backgroundTint="#A1A1A1"
            android:text="AC"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_margin="12dp"
            android:id="@+id/btn0"
            android:text="0"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_margin="12dp"
            android:id="@+id/btnDot"
            android:text="."/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cornerRadius="36dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:textSize="30dp"
            android:textColor="#FF9800"
            android:layout_margin="12dp"
            android:id="@+id/btnEquals"
            android:backgroundTint="@color/white"
            android:text="="/>

    </LinearLayout>
</LinearLayout>

    <Button
        android:id="@+id/btnHistory"
        android:layout_width="60dp"
        android:layout_height="68dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/material_dynamic_neutral90"
        android:insetLeft="0dp"
        app:cornerRadius="36dp"
        app:icon="@drawable/icons8_time_machine_30"
        app:iconTint="@android:color/holo_orange_dark" />

</RelativeLayout>